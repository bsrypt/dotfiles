{{ if eq .chezmoi.os "linux" -}}
#!/bin/sh
sudo apt-add-repository ppa:fish-shell/release-3
sudo add-apt-repository ppa:neovim-ppa/unstable
sudo apt update -yq
sudo apt upgrade -yq
sudo apt install software-properties-common -yq
echo "installing packages"
packages="$(awk '! /^ *(#|$)/' "packages")" 
xargs -a (echo "$packages") echo "âšª installing packages:"
xargs -a (echo "$packages") sudo apt-get install -yq
wget https://github.com/dandavison/delta/releases/download/0.16.5/git-delta-musl_0.16.5_amd64.deb
sudo dpkg -i git-delta-musl_0.16.5_amd64.deb
rm -rf git-delta-musl_0.16.5_amd64.deb* packages
{{ else if eq .chezmoi.os "darwin" -}}
#!/bin/sh
brew install $(cat packages)
{{- end }}
